<li>
{if $item->hasChildren()}
	{include 'submenu.latte', item => $item}
{else}
	<a class="submenu{if $item->presenter}{if $presenter->isLinkCurrent($item->presenter.':*')} current{/if}"
		href="{plink $item->presenter.':'.(isset($item->action)?$item->action:'')}{/if}" title="{if $item->label}{_$item->label}{else}{_$item->text}{/if}">
<i class="icon-{$item->icon} white"></i><span class="hidden-tablet"> {_$item->text}</span></a>

{/if}
</li>